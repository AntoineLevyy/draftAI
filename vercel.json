{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build"
    },
    {
      "src": "api.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "functions": {
    "api.py": {
      "excludeFiles": "{scraper_env,venv,env,__pycache__,*.pyc,*.pyo,*.pyd,*.db,*.sqlite3,*.log,*.csv,*.xlsx,*.ipynb,backend/pro/*.json,backend/pro/chunks,*.md,.DS_Store}/**"
    }
  }
} 